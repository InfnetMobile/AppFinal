<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:local="clr-namespace:InfoNews" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="InfoNews.CadastroPage"
		Title="{Binding Name}">

	<ContentPage.Content>
		<StackLayout VerticalOptions="StartAndExpand" Margin="0,40,0,0">

			<Label 
				Text="Nome" 
				HorizontalTextAlignment="Center"/>

			<local:CustomLoginEntry 
					x:Name="nm_nome" 
					Placeholder="Digite o seu nome" />
			
			<Label 
				Text="Usuário"
				HorizontalTextAlignment="Center"/>
			
			<local:CustomLoginEntry 
					x:Name="nm_usuario" 
					Placeholder="Digite o seu usuário"/>

			<Label 
				Text="Senha" 
				HorizontalTextAlignment="Center"/>

			<local:CustomLoginEntry  
				x:Name="nm_senha" 
				IsPassword="true" 
				Placeholder="Digite a sua senha"/>

			<Label 
				Text="E-mail" 
				HorizontalTextAlignment="Center"/>

			<local:CustomLoginEntry  
				x:Name="nm_email" 
				Placeholder="Digite o seu e-mail"/>
			
			<Button Text="Cadastre-se" Clicked="saveClicked" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
